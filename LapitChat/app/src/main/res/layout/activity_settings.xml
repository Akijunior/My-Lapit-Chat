<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_status_nome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corPrimariaChat"
    tools:context="com.example.ljuni.lapitchat.PaginasDoUsuario.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/new_profile_image" />

    <TextView
        android:id="@+id/settings_act_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/display_name"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp"
        android:layout_below="@+id/settings_image"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/settings_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/lapit_status_message"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:layout_below="@+id/settings_act_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/settings_image_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp"
        android:background="@color/cardview_light_background"
        android:padding="10dp"
        android:text="Mudar Imagem"
        android:textColor="@color/corPrimariaChat" />

    <Button
        android:id="@+id/settings_status_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/settings_image_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="@color/corAcentuadaChat"
        android:padding="10dp"
        android:text="Mudar Status"
        android:textColor="@color/cardview_light_background" />

</RelativeLayout>
